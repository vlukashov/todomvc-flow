{
  "entrypoint": "bundle.src.html",
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "bower_components/webcomponentsjs/*.js.map"
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  },
  "builds": [
    {
      "name": "es5",
      "js": { "minify": true, "compile": true },
      "css": { "minify": true },
      "html": { "minify": true },
      "bundle": true
    },
    {
      "name": "es6",
      "js": { "minify": true, "compile": false },
      "css": { "minify": true },
      "html": { "minify": true },
      "bundle": true
    }
  ]
}
